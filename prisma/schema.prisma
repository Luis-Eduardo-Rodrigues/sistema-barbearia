generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum Status {
  AGENDADO
  CANCELADO
  CONCLUIDO
}

enum Role {
  ADMIN
  USER
}

model User {
  id_user      String        @id @default(uuid())
  nome         String
  email        String        @unique
  senha        String
  role         Role          @default(USER)

  agendamentos Agendamento[]
}

model Agendamento {
  id_agendamento String   @id @default(uuid())

  user_id        String
  user           User     @relation(fields: [user_id], references: [id_user])

  data           DateTime
  status         Status   @default(AGENDADO)
  observacao     String?  @db.Text
}
